<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="final-dubbo-provider"  />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
<!--    <dubbo:registry address="zookeeper://10.248.224.18:2181?backup=10.248.224.25:2181,10.248.224.39:2181" />-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="org.ifinal.finalframework.dubbo.service.HelloService" ref="helloService"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="helloService" class="org.ifinal.finalframework.dubbo.service.HelloServiceImpl"/>
</beans>